<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2">

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/r2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="لطفا کارت مد نظر را انتخاب کنید"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="550dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chancellor_policy_card_1_front"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/back_of_policy_cards_temp" />

        <ImageView
            android:id="@+id/chancellor_policy_card_1_back"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:alpha="0"
            android:src="@drawable/liberal_card" />

        <ImageView
            android:id="@+id/chancellor_policy_card_2_front"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/back_of_policy_cards_temp" />

        <ImageView
            android:id="@+id/chancellor_policy_card_2_back"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="24dp"
            android:alpha="0"
            android:src="@drawable/liberal_card" />


    </RelativeLayout>

    <Button
        android:id="@+id/chancellor_reverse_cards_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/r2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button_2"
        android:text="برگرداندن کارت ها"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>