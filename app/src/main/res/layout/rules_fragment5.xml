<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/zar"
        android:gravity="center"
        android:text="یکی از قدرتهای ریاست جمهوری پرسیدن حزب یک فرد دلخواه است که تنها رئیس جمهور آن را می بیند. در طول بازی تنها یک بار حزب یک نفر دلخواه را میتوان پرسید"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/zar"
        android:gravity="center"
        android:text="در صورتی که رئیس جمهور از قابلیت ترور استفاده کند و شخص ترور شده هیتلر نباشد، حزب فرد ترور شده نباید محرز شود"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/zar"
        android:gravity="center"
        android:text="در صورتی که سه رئیس جمهور به صورت پشت سر هم رای نیاورند، آخرین سیاست موجود در سیاست های سوزانده نشده به عنوان سیاست آن مرحله تصویب میگردد"
        android:textColor="@color/black"
        android:textSize="18sp" />
</LinearLayout>
